{
  "name": "cert-api2",
  "version": "1.0.1",
  "description": "api 5.0",
  "author": "superorange",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:chain": "run-p start:devchain start",
    "start:dev": "nodemon",
    "start:dev-chain": "run-p start:devchain start:dev",
    "prestart:prod": "rm -rf dist && tsc",
    "start:prod": "node dist/main.js",
    "rm:db": "shx rm -f mydb.sqlite",
    "start:devchain": "ganache-cli -p 8545 -m 'tell sibling misery still crew globe flip leopard mosquito silk west gesture' > /dev/null",
    "start:devchain-cht": "ganache-cli -p 8545 -m '卡 領 填 訂 思 勸 批 豬 瓦 桿 嫂 軍'",
    "wait-tcp:8545": "wait-on -d 1000 tcp:8545",
    "wait-tcp:3000": "wait-on -d 1000 tcp:3000",
    "start:wait-chain-on": "run-s wait-tcp:8545 start",
    "start:chain-api": "run-p start:devchain start:wait-chain-on",
    "test:e2e-wait-api": "run-s wait-tcp:3000 test:e2e",
    "test:start-chain-api": "run-p start:chain-api test:e2e-wait-api",
    "test:all": "run-s rm:db test:start-chain-api",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:e2e-only-initial": "jest 'initial.e2e' --runInBand --config ./test/jest-e2e.json",
    "test:e2e-only-ipfs": "jest 'ipfs.e2e' --runInBand --config ./test/jest-e2e.json",
    "test:e2e": "jest initial --runInBand --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^5.0.0",
    "@nestjs/core": "^5.0.0",
    "@nestjs/microservices": "^4.5.8",
    "@nestjs/testing": "^4.5.5",
    "@nestjs/typeorm": "^2.0.0",
    "@nestjs/websockets": "^4.5.8",
    "@types/multer": "^1.3.6",
    "@types/qs": "^6.5.1",
    "axios": "^0.18.0",
    "base64-xor": "^0.10.0",
    "bigi": "^1.4.2",
    "bip39": "^2.5.0",
    "bitcoinjs-lib": "^3.3.2",
    "bstring": "0.0.2",
    "class-validator": "^0.14.0",
    "crypto": "^1.0.1",
    "dotenv": "^5.0.1",
    "ecurve": "^1.0.6",
    "ethereumjs-abi": "^0.6.5",
    "ethereumjs-util": "^5.2.0",
    "fastify-formbody": "^2.0.0",
    "fs": "0.0.1-security",
    "image-watermark": "0.0.7",
    "ipfs-api": "^22.3.0",
    "js-md5": "^0.7.3",
    "js-sha3": "^0.7.0",
    "jsonwebtoken": "^8.2.2",
    "jsrsasign": "^8.0.12",
    "lodash": "^4.17.10",
    "mysql": "^2.15.0",
    "needle": "^2.2.1",
    "node-mysql-wrapper": "^2.9.3",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-openid": "^0.4.0",
    "qs": "^6.5.2",
    "qs-stringify": "^1.1.0",
    "random-number": "0.0.9",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.0.0",
    "truffle-hdwallet-provider": "0.0.3",
    "typescript": "^2.6.2",
    "websocket": "^1.0.26"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.0.0",
    "@types/express": "^4.0.39",
    "@types/jest": "^21.1.8",
    "@types/node": "^9.3.0",
    "@types/supertest": "^2.0.4",
    "jest": "^21.2.1",
    "nodemon": "^1.14.1",
    "prettier": "^1.11.1",
    "supertest": "^3.0.0",
    "ts-jest": "^21.2.4",
    "ts-loader": "^4.1.0",
    "ts-node": "^4.1.0",
    "tsconfig-paths": "^3.1.1",
    "tslint": "5.3.2",
    "webpack": "^4.2.0",
    "webpack-cli": "^2.0.13",
    "webpack-node-externals": "^1.6.0",
    "@types/lodash": "^4.14.109"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  }
}
